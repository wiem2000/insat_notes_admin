            @RenderBody()
        </main>
    </div>
</div>

    </div>

 
  



    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - app_grades - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
